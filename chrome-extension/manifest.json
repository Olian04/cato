{
  "manifest_version": 2,
  "name": "Awesome Task Launcher",
  "description": "A task launcher by Alfred App and text editors such as Atom, VScode & Sublime.",
  "version": "1.0",

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "./popup.html",
    "default_title": "Awesome Command Palette"
  },
  "options_page": "./options.html",
  "background": {
    "persistent": false,
    "scripts": [
      "./hot-reload.js",
      "./popup.js"
    ]
  },
  "offline_enabled": true,
  "permissions": [
    "activeTab",
    "bookmarks",
    "tabs",
    "<all_urls>",
    "clipboardRead",
    "clipboardWrite",
    "management",
    "storage",
    "unlimitedStorage"
  ],
  "commands": {
    "_execute_browser_action": {
      "suggested_key": {
        "windows": "Ctrl+J",
        "mac": "Command+J",
        "chromeos": "Ctrl+J",
        "linux": "Ctrl+J"
      }
    }
  }
}
